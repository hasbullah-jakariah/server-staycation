<div class="card shadow mb-4">
    <div class="card-body">
        <div class="card-header">
            <a href="/admin/booking" class="btn btn-info shadow-lg">Back</a>
        </div>
        <div class="row">
            <div class="col-md-4">
                <img src="https://super-garb-ox.cyclic.app/<%= booking.payments.proofPayment %>" alt="image"
                style="width: 100%; display: block;">
                <div class="row">
                    <% if(booking.payments.status == "Proses"){ %>
                        
                        <form action="/admin/booking/<%= booking.id %>/confirmation?_method=put" method="post" class="mt-4">
                            <button type="submit" class="btn btn-success mr-5">
                                <i class="fas fa-check"></i>
                                Confirmation
                            </button>
                        </form>
                        <form action="/admin/booking/<%= booking.id %>/reject?_method=put" method="post" class="mt-4">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-times"></i>
                                Reject
                            </button>
                        </form>
                    <% }%>
                </div>


            </div>

            <div class="col-md-8">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Bank From</th>
                                <th>Name Member</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><%= booking.itemId.title %></td>
                                <td><%= booking.payments.bankFrom %></td>
                                <td><%= booking.memberId.firstName %> <%= booking.memberId.lastName %></td>
                                <td>$<%= booking.total %></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
